<div class="container">
    <header class="header">
        <h1>房地產管理</h1>
        <button class="btn-add">
            <i class="icon-plus"></i>
            新增物件
        </button>
    </header>

    <div class="search-bar">
        <input type="text" placeholder="搜尋物件...">
        <i class="icon-search"></i>
    </div>

    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>物件名稱</th>
                    <th>地址</th>
                    <th>價格</th>
                    <th>類型</th>
                    <th>坪數</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>喵星人豪宅</td>
                    <td>台北市信義區信義路</td>
                    <td>35,000,000</td>
                    <td>公寓</td>
                    <td>45</td>
                    <td class="actions">
                        <button class="btn-edit">Edit</button>
                        <button class="btn-delete">Delete</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div class="modal" id="propertyModal">
    <div class="modal-content">
        <h2>新增物件</h2>
        <form class="property-form">
            <div class="form-group">
                <label>物件名稱</label>
                <input type="text">
            </div>
            <div class="form-group">
                <label>地址</label>
                <input type="text">
            </div>
            <div class="form-group">
                <label>價格</label>
                <input type="number">
            </div>
            <div class="form-group">
                <label>類型</label>
                <select>
                    <option>公寓</option>
                    <option>透天厝</option>
                    <option>大樓</option>
                </select>
            </div>
            <div class="form-group">
                <label>坪數</label>
                <input type="number">
            </div>
            <div class="form-actions">
                <button type="button" class="btn-cancel">取消</button>
                <button type="submit" class="btn-submit">確認</button>
            </div>
        </form>
    </div>
</div>